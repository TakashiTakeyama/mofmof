<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %><%= "円" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %><%= "年" %>
  </div>

  <div class="field">
    <%= f.label :remarks %>
    <%= f.text_area :remarks %>
  </div>

  <% x = 1 %>
  <%= f.fields_for :sts do |f| %>
  <h3>最寄り駅<%= x %></h3>
    <div class="field">
      <%= f.label :route_name %>
      <%= f.text_field :route_name %>
    </div>

    <div class="field">
      <%= f.label :station %>
      <%= f.text_field :station %>
    </div>

    <div class="field">
      <%= f.label :minute %>
      <%= f.text_field :minute %><%= "分" %>
    </div>
    <% x += 1 %>
    <% end %>

  <div class="actions">
    <%= f.submit("登録する") %>
  </div>
<% end %>

